{
	// SETTINGS

	"workbench.settings.editor": "json",

	// ************
	// ** EDITOR **
	// ************

	"editor.copyWithSyntaxHighlighting": true,
	"editor.cursorSmoothCaretAnimation": true,
	"editor.renderIndentGuides": true,
	"editor.renderWhitespace": "boundary",
	"editor.minimap.enabled": true,
	"editor.fontFamily": "Hack",
	// "editor.fontFamily": "'Hack', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
	"editor.fontSize": 14,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.suggestSelection": "first",
	"editor.rulers": [
		80
	],

	// ***********
	// ** FILES **
	// ***********

	"files.autoSaveDelay": 1000,
	"files.autoSave": "off",
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,

	"files.associations": {
		"Dockerfile-centos": "dockerfile",
		"Dockerfile_*": "dockerfile",
		"Dockerfile-*": "dockerfile"
	},

	// ***************
	// ** WORKBENCH **
	// ***************

	"workbench.editor.closeEmptyGroups": false,
	"workbench.tree.indent": 10,
	"workbench.editor.showIcons": true,
	"workbench.tips.enabled": false,
	"workbench.statusBar.feedback.visible": false,
	"workbench.startupEditor": "newUntitledFile",
	"workbench.colorCustomizations": {
		"statusBar.background": "#212121",
	},

	// ************
	// ** THEMES **
	// ************

	"workbench.iconTheme": "file-icons",
	"workbench.colorTheme": "One Dark Pro Bold",

	// ***********
	// ** OTHER **
	// ***********

	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	"python.jediEnabled": false,
	"breadcrumbs.enabled": true,
	"gitlens.views.repositories.location": "scm",
	"gitlens.views.fileHistory.location": "explorer",
	"gitlens.views.lineHistory.location": "explorer",
	"gitlens.views.compare.location": "gitlens",
	"gitlens.views.search.location": "gitlens",
	"gitlens.currentLine.enabled": false,
	"gitlens.hovers.currentLine.over": "line",
	"gitlens.statusBar.alignment": "left",
	"explorer.confirmDragAndDrop": false
}
