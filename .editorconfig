# config settings
root = True

# for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# for C files
[*.c]
indent_style = tab
tab_width = 4

# for Java files
[*.java]
indent_style = tab
tab_width = 4

# for python files
[*.py]
indent_style = tab
tab_width = 4

[*.html]
indent_style = tab
tab_width = 2

[*.css]
indent_style = tab
tab_width = 2
